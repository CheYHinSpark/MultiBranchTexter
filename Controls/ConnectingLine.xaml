<UserControl x:Class="MultiBranchTexter.ConnectingLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             >
    <UserControl.Resources>
        <!--右键菜单部分-->
        <ContextMenu x:Key="lineContextMenu">
            <MenuItem x:Name="addNode" Header="添加节点" Click="addNode_Click"/>
            <MenuItem x:Name="deleteLine" Header="删除连线" Click="deleteLine_Click"/>
        </ContextMenu>
    </UserControl.Resources>
    <Path x:Name="Path" StrokeThickness="3" 
          MouseDown="Path_MouseDown"
          MouseEnter="Path_MouseEnter"
          MouseLeave="Path_MouseLeave"
          Style="{StaticResource connectingLinePathStyle}"
          ContextMenu="{StaticResource lineContextMenu}"
          />
</UserControl>

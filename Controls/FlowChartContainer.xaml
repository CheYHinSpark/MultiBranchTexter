<UserControl x:Class="MultiBranchTexter.FlowChartContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MultiBranchTexter"
             Loaded="UserControl_Loaded"
             >
    <ScrollViewer x:Name="scrollViewer" Background="White"
                  VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Auto">
        <Grid x:Name="container"
              Width="Auto" Height="Auto" 
              HorizontalAlignment="Left" 
              VerticalAlignment="Top">
            <local:NodeButton x:Name="b1" Width="40" Margin="10" Height="20"/>
            <local:NodeButton x:Name="b2" Width="40" Margin="200,200,0,0" Height="20"/>
            <local:NodeButton x:Name="b4" Width="40" Margin="10,503,0,0" Height="20"/>
            <local:NodeButton x:Name="b3" Width="40" Margin="400,603,0,0" Height="20"/>
        </Grid>
    </ScrollViewer>
</UserControl>

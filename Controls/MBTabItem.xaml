<TabItem x:Class="MultiBranchTexter.Controls.MBTabItem"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:c="clr-namespace:MultiBranchTexter.Controls"
         Loaded="TabItem_Loaded"
         MinHeight="24"
         Padding="0"
         KeyDown="TabItem_KeyDown"
         Template="{StaticResource MBTabItemTemplate}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBox" FontSize="14"
                 VerticalScrollBarVisibility="Auto"
                 AcceptsTab="True" AcceptsReturn="True"
                 TextWrapping="Wrap" Background="{DynamicResource MainBrush}"
                 Template="{StaticResource textBoxTemplate}">
        </TextBox>
        <!--下方信息栏-->
        <c:TabEnd x:Name="tabEnd" Grid.Row="1" HorizontalAlignment="Stretch"/>
    </Grid>
</TabItem>

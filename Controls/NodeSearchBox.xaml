<UserControl x:Class="MultiBranchTexter.Controls.NodeSearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiBranchTexter.Controls"
             Height="56" Width="160">
    <Grid Background="{StaticResource ThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="28"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="搜索标题" Foreground="White" Margin="4" VerticalAlignment="Center"/>
        <Button x:Name="closeBtn" Grid.Column="1" Margin="4" 
                Template="{StaticResource searchBoxBtnTemp}"
                Click="closeBtn_Click"/>
        <TextBox x:Name="findBox" Grid.Row="1" Grid.Column="0" Margin="4"
                 TextChanged="findBox_TextChanged"/>
        <Button x:Name="nextBtn" Grid.Row="1" Grid.Column="1" Margin="4" 
                Template="{StaticResource searchBoxBtnTemp}"
                Click="nextBtn_Click"/>
    </Grid>
</UserControl>

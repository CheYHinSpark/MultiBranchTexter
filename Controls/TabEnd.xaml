<UserControl x:Class="MultiBranchTexter.Controls.TabEnd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:MultiBranchTexter.Controls">
    <Grid Background="{StaticResource mainColorBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto" MaxHeight="40"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="questionTxt"/>
        <ScrollViewer Grid.Row="1" MaxHeight="40"
                      Background="White"
                      FocusVisualStyle="{x:Null}"
                      HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid x:Name="container" Grid.IsSharedSizeScope="True"/>
        </ScrollViewer>
    </Grid>
</UserControl>

<UserControl x:Class="MultiBranchTexter.Controls.TextNodePresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:MultiBranchTexter.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*" MinHeight="240"/>
            </Grid.RowDefinitions>
            <StackPanel x:Name="fragmentContainer" Grid.Row="0" Orientation="Vertical"/>
            <Border Grid.Row="1" Background="Transparent" 
                    MouseLeftButtonDown="Border_MouseLeftButtonDown"/>
        </Grid>
    </ScrollViewer>
</UserControl>

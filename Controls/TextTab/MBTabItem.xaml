<TabItem x:Class="MultiBranchTexter.Controls.MBTabItem"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:local="clr-namespace:MultiBranchTexter"
         xmlns:c="clr-namespace:MultiBranchTexter.Controls"
         Loaded="TabItem_Loaded"
         MinHeight="24"
         Padding="0"
         KeyDown="TabItem_KeyDown"
         Template="{DynamicResource MBTabItemTemplate}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <c:MBTextBox x:Name="textBox" 
                     FontSize="{Binding DataContext.TextFontSize, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsTab="True" AcceptsReturn="True" TextWrapping="Wrap" 
                     Template="{DynamicResource textBoxTemplate}"
                     Foreground="{DynamicResource Text.Foreground.BaseBrush}"
                     CaretBrush="{DynamicResource ThemeBrush}"
                     Background="{DynamicResource MainBrush}"/>
        <!--下方信息栏-->
        <c:TabEnd x:Name="tabEnd" Grid.Row="1" HorizontalAlignment="Stretch"/>
    </Grid>
</TabItem>
